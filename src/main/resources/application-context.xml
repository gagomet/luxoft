<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bankDAO" class="BankApplication.DAO.impl.BankDAOImpl">
    </bean>
    <bean id="accountDAO" class="BankApplication.DAO.impl.AccountDAOImpl">
    </bean>
    <bean id="clientDAO" class="BankApplication.DAO.impl.ClientDAOImpl">
    </bean>

    <bean class="BankApplication.service.impl.FullBankService" id="fullBankService">
        <property name="bankDAO" ref="bankDAO"/>
        <property name="clientDAO" ref="clientDAO"/>
        <property name="accountDAO" ref="accountDAO"/>
    </bean>

    <bean id="console" class="BankApplication.network.console.ConsoleImpl">
    </bean>


    <bean class="BankApplication.main.BankCommander" id="bankCommander">
        <property name="commandsMap">
            <map>
                <entry key="1">
                    <bean class="BankApplication.commander.impl.FindClientCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>

                </entry>
                <entry key="2">
                    <bean class="BankApplication.commander.impl.GetAccountCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="3">
                    <bean class="BankApplication.commander.impl.DepositCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="4">
                    <bean class="BankApplication.commander.impl.WithdrawCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="5">
                    <bean class="BankApplication.commander.impl.TransferCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="6">
                    <bean class="BankApplication.commander.impl.AddClientCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="7">
                    <bean class="BankApplication.commander.impl.RemoveClientCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="8">
                    <bean class="BankApplication.commander.impl.ReportCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="9">
                    <bean class="BankApplication.commander.impl.ShowHelpCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
                <entry key="10">
                    <bean class="BankApplication.commander.impl.ExitCommand"  autowire="byType">
                        <constructor-arg ref="console"/>
                        <constructor-arg ref="fullBankService"/>
                    </bean>
                </entry>
            </map>
        </property>
        
    </bean>

</beans>